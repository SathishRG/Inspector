<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape>
            <solid android:color="@color/defaultTextFieldInputBackground" />
            <stroke android:width="1dp" android:color="@color/defaultTextFieldBorderActive" />
            <corners android:radius="4dp" />
        </shape>
    </item>
    <item>

        <shape>
            <solid android:color="@color/defaultTextFieldInputBackground" />
            <stroke android:width="1dp" android:color="@color/defaultTextFieldBorderNormal" />
            <corners android:radius="4dp" />
        </shape>
    </item>

</selector>