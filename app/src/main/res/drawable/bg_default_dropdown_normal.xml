<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape >
            <solid android:color="@color/defaultDropdownBackground" />
            <stroke
                android:width="1dp"
                android:color="@color/defaultDropdownBorderActive" />
            <corners android:radius="4dp" />
        </shape>
    </item>
    <item>
        <shape >
            <solid android:color="@color/defaultDropdownBackground" />
            <stroke
                android:width="1dp"
                android:color="@color/defaultDropdownBorderNormal" />
            <corners android:radius="4dp" />
        </shape>
    </item>
</selector>