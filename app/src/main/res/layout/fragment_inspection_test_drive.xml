<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/warmGrey01"
        tools:context=".ui.login.fragments.inspection.InspectionTestDriveFragment">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/test_drive"
                    style="@style/SellerInfo.Value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/tab_bg"
                    android:text="@string/test_drive"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/automatic_transmission_title"
                    style="@style/Login.Label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="8dp"
                    android:text="@string/automatic_transmission"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/test_drive" />

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/automatic_transmission_switch"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/track_selector"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/automatic_transmission_title"
                    app:tabIndicatorColor="#FF06670A"
                    app:tabSelectedTextColor="@color/white"
                    app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget"
                    app:tabTextColor="@color/black" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/manual_transmission_title"
                    style="@style/Login.Label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="8dp"
                    android:text="@string/manual_transmission"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/automatic_transmission_switch" />

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/manual_transmission_switch"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/track_selector"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/manual_transmission_title"
                    app:tabIndicatorColor="#FF06670A"
                    app:tabSelectedTextColor="@color/white"
                    app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget"
                    app:tabTextColor="@color/black" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/exilator_level_title"
                    style="@style/Login.Label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="8dp"
                    android:text="@string/exilator_level"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/manual_transmission_switch" />

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/exilator_level_switch"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/track_selector"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/exilator_level_title"
                    app:tabIndicatorColor="#FF06670A"
                    app:tabSelectedTextColor="@color/white"
                    app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget"
                    app:tabTextColor="@color/black" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/breaking_sense_title"
                    style="@style/Login.Label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="8dp"
                    android:text="@string/breaking_senses"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/exilator_level_switch" />

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/breaking_sense_switch"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/track_selector"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/breaking_sense_title"
                    app:tabIndicatorColor="#FF06670A"
                    app:tabSelectedTextColor="@color/white"
                    app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget"
                    app:tabTextColor="@color/black" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/steering_controls_title"
                    style="@style/Login.Label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="8dp"
                    android:text="@string/steering_controls"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/breaking_sense_switch" />

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/steering_controls_switch"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/track_selector"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/steering_controls_title"
                    app:tabIndicatorColor="#FF06670A"
                    app:tabSelectedTextColor="@color/white"
                    app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget"
                    app:tabTextColor="@color/black" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/transfer_case_title"
                    style="@style/Login.Label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="8dp"
                    android:text="@string/transfer_case"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/steering_controls_switch" />

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/transfer_case_switch"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/track_selector"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/transfer_case_title"
                    app:tabIndicatorColor="#FF06670A"
                    app:tabSelectedTextColor="@color/white"
                    app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget"
                    app:tabTextColor="@color/black" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/differential_title"
                    style="@style/Login.Label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="8dp"
                    android:text="@string/differential"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/transfer_case_switch" />

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/differential_switch"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/track_selector"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/differential_title"
                    app:tabIndicatorColor="#FF06670A"
                    app:tabSelectedTextColor="@color/white"
                    app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget"
                    app:tabTextColor="@color/black" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/add_test_drive_video_title"
                    style="@style/Login.Label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="8dp"
                    android:text="@string/add_test_drive_video"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/differential_switch" />

                <ImageView
                    android:id="@+id/add_test_drive_video_btn"
                    android:layout_width="71dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/play_button"
                    android:background="@drawable/test_drive"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/add_test_drive_video_title" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/add_multiple_image_video_title"
                    style="@style/Login.Label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="16dp"
                    android:text="@string/add_multiple_images_videos"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/add_test_drive_video_btn" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/add_multiple_image_video_recyler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintTop_toBottomOf="@+id/add_multiple_image_video_title"
                    tools:listitem="@layout/inspection_add_image_video_item_view" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/comments_title"
                    style="@style/Login.Label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:text="@string/comments"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/add_multiple_image_video_recyler_view" />

                <EditText
                    android:id="@+id/comments"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/edittext_rounded_corners"
                    android:backgroundTint="@color/white"
                    android:editable="false"
                    android:gravity="top|start"
                    android:hint="@string/comments_hint"
                    android:textSize="12sp"
                    android:inputType="textMultiLine"
                    android:lines="2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/comments_title" />

                <include
                    android:id="@+id/test_drive_submit_btn"
                    layout="@layout/progress_btn_layout"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="24dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="25dp"
                    android:text="@string/submit"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.498"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/comments"
                    app:layout_constraintVertical_bias="0.0" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/test_drive_submit_btn" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

        <ProgressBar
            android:id="@+id/progressBarTestDrive"
            style="@style/Widget.AppCompat.ProgressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>