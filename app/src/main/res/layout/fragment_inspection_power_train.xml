<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/warmGrey01"
        tools:context=".ui.login.fragments.inspection.InspectionPowerTrainFragment">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/covered_power_train"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/tab_bg"
                    android:text="@string/covered_power_train"
                    style="@style/SellerInfo.Value"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/engine_bottom_end_noise_title"
                    android:layout_width="0dp"
                    style="@style/Login.Label"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="8dp"
                    android:text="@string/engine_bottom_end_noise"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/covered_power_train" />

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/engine_bottom_end_noise_switch"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/track_selector"
                    app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/engine_bottom_end_noise_title"
                    app:tabIndicatorColor="#FF06670A"
                    app:tabSelectedTextColor="@color/white"
                    app:tabTextColor="@color/black" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/automatic_transmission_operation_title"
                    android:layout_width="0dp"
                    style="@style/Login.Label"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="8dp"
                    android:text="@string/automatic_transmission_operation"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/engine_bottom_end_noise_switch" />

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/automatic_transmission_operation_switch"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/track_selector"
                    app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/automatic_transmission_operation_title"
                    app:tabIndicatorColor="#FF06670A"
                    app:tabSelectedTextColor="@color/white"
                    app:tabTextColor="@color/black" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/transfer_case_operation_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="8dp"
                    style="@style/Login.Label"
                    android:text="@string/transfer_case_operation"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/automatic_transmission_operation_switch" />

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/transfer_case_operation_switch"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/track_selector"
                    app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/transfer_case_operation_title"
                    app:tabIndicatorColor="#FF06670A"
                    app:tabSelectedTextColor="@color/white"
                    app:tabTextColor="@color/black" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/ds_front_door_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="8dp"
                    style="@style/Login.Label"
                    android:text="@string/ds_front_door_case"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/transfer_case_operation_switch" />

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/ds_front_door_switch"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/track_selector"
                    app:layout_constraintStart_toStartOf="parent"
                    app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget"
                    app:layout_constraintTop_toBottomOf="@+id/ds_front_door_title"
                    app:tabIndicatorColor="#FF06670A"
                    app:tabSelectedTextColor="@color/white"
                    app:tabTextColor="@color/black" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/differential_operation_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="8dp"
                    style="@style/Login.Label"
                    android:text="@string/differential_operation"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ds_front_door_switch" />

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/differential_operation_switch"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/track_selector"
                    app:layout_constraintStart_toStartOf="parent"
                    app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget"
                    app:layout_constraintTop_toBottomOf="@+id/differential_operation_title"
                    app:tabIndicatorColor="#FF06670A"
                    app:tabSelectedTextColor="@color/white"
                    app:tabTextColor="@color/black" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/add_multiple_image_video_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    style="@style/Login.Label"
                    android:layout_marginTop="16dp"
                    android:text="@string/add_multiple_images_videos"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/differential_operation_switch" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/add_multiple_image_video_recyler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintTop_toBottomOf="@+id/add_multiple_image_video_title"
                    tools:listitem="@layout/inspection_add_image_video_item_view" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/comments_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    style="@style/Login.Label"
                    android:layout_marginTop="16dp"
                    android:text="@string/comments"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/add_multiple_image_video_recyler_view" />

                <EditText
                    android:id="@+id/comments"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/edittext_rounded_corners"
                    android:backgroundTint="@color/white"
                    android:editable="false"
                    android:gravity="top|start"
                    android:textSize="12sp"
                    android:hint="@string/comments_hint"
                    android:inputType="textMultiLine"
                    android:lines="2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/comments_title" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/power_train_continue_btn"
                    android:layout_width="120dp"
                    android:backgroundTint="@color/profile_name"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="24dp"
                    style="@style/ButtonRedActive"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="25dp"
                    android:text="@string/next"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.498"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/comments"
                    app:layout_constraintVertical_bias="0.0" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/power_train_continue_btn" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
        <ProgressBar
            android:id="@+id/progressBarPowerTrain"
            style="@style/Widget.AppCompat.ProgressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>