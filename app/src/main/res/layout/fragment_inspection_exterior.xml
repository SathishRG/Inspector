<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/warmGrey01"
        tools:context=".ui.login.fragments.inspection.InspectionExteriorFragment">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/exterior"
                    style="@style/SellerInfo.Value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/tab_bg"
                    android:text="Exterior"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/no_visible_rust_title"
                    style="@style/Login.Label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="8dp"
                    android:text="No Visible Rust"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/exterior" />

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/no_visible_rust_switch"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/track_selector"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/no_visible_rust_title"
                    app:tabIndicatorColor="#FF06670A"
                    app:tabSelectedTextColor="@color/white"
                    app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget"
                    app:tabTextColor="@color/black" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/no_colour_fade_title"
                    style="@style/Login.Label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="8dp"
                    android:text="No Colour Fade"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/no_visible_rust_switch" />

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/no_colour_fade_switch"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/track_selector"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/no_colour_fade_title"
                    app:tabIndicatorColor="#FF06670A"
                    app:tabSelectedTextColor="@color/white"
                    app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget"
                    app:tabTextColor="@color/black" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/no_glass_damaged_title"
                    style="@style/Login.Label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="8dp"
                    android:text="No Glass Damaged"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/no_colour_fade_switch" />

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/no_glass_damaged_switch"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/track_selector"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/no_glass_damaged_title"
                    app:tabIndicatorColor="#FF06670A"
                    app:tabSelectedTextColor="@color/white"
                    app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget"
                    app:tabTextColor="@color/black" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/no_exterior_scratches_title"
                    style="@style/Login.Label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="8dp"
                    android:text="No Exterior Scratches"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/no_glass_damaged_switch" />

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/no_exterior_scratches_switch"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/track_selector"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/no_exterior_scratches_title"
                    app:tabIndicatorColor="#FF06670A"
                    app:tabSelectedTextColor="@color/white"
                    app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget"
                    app:tabTextColor="@color/black" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/no_side_mirror_damage_title"
                    style="@style/Login.Label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="8dp"
                    android:text="No Side Mirror Damage"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/no_exterior_scratches_switch" />

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/no_side_mirror_damage_switch"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/track_selector"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/no_side_mirror_damage_title"
                    app:tabIndicatorColor="#FF06670A"
                    app:tabSelectedTextColor="@color/white"
                    app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget"
                    app:tabTextColor="@color/black" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/add_multiple_image_video_title"
                    style="@style/Login.Label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="16dp"
                    android:text="@string/add_multiple_images_videos"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/no_side_mirror_damage_switch" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/add_multiple_image_video_recyler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintTop_toBottomOf="@+id/add_multiple_image_video_title"
                    tools:listitem="@layout/inspection_add_image_video_item_view" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/comments_title"
                    style="@style/Login.Label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:text="@string/comments"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/add_multiple_image_video_recyler_view" />

                <EditText
                    android:id="@+id/comments"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:textSize="12sp"
                    android:background="@drawable/edittext_rounded_corners"
                    android:backgroundTint="@color/white"
                    android:editable="false"
                    android:gravity="top|start"
                    android:hint="@string/comments_hint"
                    android:inputType="textMultiLine"
                    android:lines="2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/comments_title" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/exterior_continue_btn"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="24dp"
                    android:layout_marginTop="20dp"
                    style="@style/ButtonRedActive"
                    android:layout_marginBottom="25dp"
                    android:text="@string/next"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.498"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/comments"
                    app:layout_constraintVertical_bias="0.0" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/exterior_continue_btn" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

        <ProgressBar
            android:id="@+id/progressBarInspectionExterior"
            style="@style/Widget.AppCompat.ProgressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>