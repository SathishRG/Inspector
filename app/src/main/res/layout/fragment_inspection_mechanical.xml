<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/warmGrey01"
        tools:context=".ui.login.fragments.inspection.InspectionMechanicalFragment">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/mechanical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/tab_bg"
                    style="@style/SellerInfo.Value"
                    android:text="@string/mechanical"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/engine_upper_end_title"
                    style="@style/Login.Label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="8dp"
                    android:text="@string/engine_upper_end"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/mechanical" />

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/engine_upper_end_switch"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget"
                    android:background="@drawable/track_selector"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/engine_upper_end_title"
                    app:tabIndicatorColor="#FF06670A"
                    app:tabSelectedTextColor="@color/white"
                    app:tabTextColor="@color/black" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/engine_bottom_end_title"
                    style="@style/Login.Label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="8dp"
                    android:text="@string/engine_bottom_end"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/engine_upper_end_switch" />

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/engine_bottom_end_switch"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget"
                    android:background="@drawable/track_selector"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/engine_bottom_end_title"
                    app:tabIndicatorColor="#FF06670A"
                    app:tabSelectedTextColor="@color/white"
                    app:tabTextColor="@color/black" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/catalytic_converter_present_title"
                    style="@style/Login.Label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="8dp"
                    android:text="@string/catalytic_converter_present"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/engine_bottom_end_switch" />

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/catalytic_converter_present_switch"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/track_selector"
                    app:layout_constraintStart_toStartOf="parent"
                    app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget"
                    app:layout_constraintTop_toBottomOf="@+id/catalytic_converter_present_title"
                    app:tabIndicatorColor="#FF06670A"
                    app:tabSelectedTextColor="@color/white"
                    app:tabTextColor="@color/black" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/heater_runs_hot_title"
                    style="@style/Login.Label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="8dp"
                    android:text="@string/heater_runs_hot"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/catalytic_converter_present_switch" />

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/heater_runs_hot_switch"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/track_selector"
                    app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/heater_runs_hot_title"
                    app:tabIndicatorColor="#FF06670A"
                    app:tabSelectedTextColor="@color/white"
                    app:tabTextColor="@color/black" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/ac_runs_hot_title"
                    style="@style/Login.Label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="8dp"
                    android:text="@string/a_c_runs_hot"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/heater_runs_hot_switch" />

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/ac_runs_hot_switch"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/track_selector"
                    app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ac_runs_hot_title"
                    app:tabIndicatorColor="#FF06670A"
                    app:tabSelectedTextColor="@color/white"
                    app:tabTextColor="@color/black" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/engine_light_startup_title"
                    style="@style/Login.Label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="8dp"
                    android:text="@string/no_check_engine_light_at_startup"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ac_runs_hot_switch" />

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/engine_light_startup_switch"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/track_selector"
                    app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/engine_light_startup_title"
                    app:tabIndicatorColor="#FF06670A"
                    app:tabSelectedTextColor="@color/white"
                    app:tabTextColor="@color/black" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/no_abs_title"
                    style="@style/Login.Label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="8dp"
                    android:text="@string/no_abs"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/engine_light_startup_switch" />

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/no_abs_switch"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/track_selector"
                    app:layout_constraintStart_toStartOf="parent"
                    app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget"
                    app:layout_constraintTop_toBottomOf="@+id/no_abs_title"
                    app:tabIndicatorColor="#FF06670A"
                    app:tabSelectedTextColor="@color/white"
                    app:tabTextColor="@color/black" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/no_srs_title"
                    style="@style/Login.Label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="8dp"
                    android:text="@string/no_srs_airbag_light"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/no_abs_switch" />

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/no_srs_switch"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/track_selector"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/no_srs_title"
                    app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget"
                    app:tabIndicatorColor="#FF06670A"
                    app:tabSelectedTextColor="@color/white"
                    app:tabTextColor="@color/black" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/mech_differential_operation_title"
                    style="@style/Login.Label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="8dp"
                    android:text="@string/differential_operation"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/no_srs_switch" />

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/mech_differential_operation_switch"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/track_selector"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/mech_differential_operation_title"
                    app:tabIndicatorColor="#FF06670A"
                    app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget"
                    app:tabSelectedTextColor="@color/white"
                    app:tabTextColor="@color/black" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/upload_video_start_car_title"
                    style="@style/Login.Label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="8dp"
                    android:text="@string/upload_video_start_the_car_and_raise_the_engine_from_inside_the_car"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/mech_differential_operation_switch" />

                <ImageView
                    android:id="@+id/upload_video_start_car_btn"
                    android:layout_width="71dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="4dp"
                    android:src="@drawable/play_button"
                    android:background="@drawable/upload_video_start"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/upload_video_start_car_title" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/upload_video_stand_front_title"
                    style="@style/Login.Label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginTop="8dp"
                    android:text="@string/upload_video_stand_front_of_the_car_with_the_hood_open_if_its_possible_and_a_foot_away_from_the_car_record_the_engine_noise_and_engine_shake"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/upload_video_start_car_btn" />

                <ImageView
                    android:id="@+id/upload_video_stand_front_btn"
                    android:layout_width="71dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="4dp"
                    android:src="@drawable/play_button"
                    android:background="@drawable/stand_front"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/upload_video_stand_front_title" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/upload_video_exaction_smoke_title"
                    style="@style/Login.Label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="8dp"
                    android:text="@string/upload_video_to_show_the_exaction_smoke_and_silencer_sound"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/upload_video_stand_front_btn" />

                <ImageView
                    android:id="@+id/upload_video_exaction_smoke_btn"
                    android:layout_width="71dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="4dp"
                    android:src="@drawable/play_button"
                    android:background="@drawable/exaction_smoke"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/upload_video_exaction_smoke_title" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/add_multiple_image_video_title"
                    style="@style/Login.Label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="16dp"
                    android:text="@string/add_multiple_images_videos"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/upload_video_exaction_smoke_btn" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/add_multiple_image_video_recyler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintTop_toBottomOf="@+id/add_multiple_image_video_title"
                    tools:listitem="@layout/inspection_add_image_video_item_view" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/comments_title"
                    style="@style/Login.Label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:text="@string/comments"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/add_multiple_image_video_recyler_view" />

                <EditText
                    android:id="@+id/comments"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/edittext_rounded_corners"
                    android:backgroundTint="@color/white"
                    android:editable="false"
                    android:gravity="top|start"
                    android:textSize="12sp"
                    android:hint="@string/comments_hint"
                    android:inputType="textMultiLine"
                    android:lines="2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/comments_title" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/mechanical_continue_btn"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="24dp"
                    android:layout_marginTop="16dp"
                    style="@style/ButtonRedActive"
                    android:layout_marginBottom="25dp"
                    android:text="@string/next"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.498"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/comments"
                    app:layout_constraintVertical_bias="0.0" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/mechanical_continue_btn" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

        <ProgressBar
            android:id="@+id/progressBarInspectionMechanical"
            style="@style/Widget.AppCompat.ProgressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>